<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BrowseLayoutStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/browse_button_padding</item>
    </style>

    <style name="WelcomeMessageStyle">
        <item name="android:textColor">@color/welcome_message_text_color</item>
        <item name="android:textSize">@dimen/welcome_message_text_size</item>
        <item name="android:padding">@dimen/welcome_message_padding</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BrowseButtonsStyle" parent="WelcomeMessageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/browse_button_text_size</item>
        <item name="android:textColor">@color/browse_buttons_text_color</item>
    </style>

    <style name="BrowseButtonsSubtextStyle" parent="BrowseButtonsStyle">
        <item name="android:textSize">@dimen/browse_button_subtext_size</item>
    </style>
    
    <style name="ListItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@color/welcome_message_text_color</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_bottom</item>
        <item name="android:paddingEnd">@dimen/list_item_padding</item>
        <item name="android:paddingStart">@dimen/list_item_padding</item>
    </style>

</resources>
