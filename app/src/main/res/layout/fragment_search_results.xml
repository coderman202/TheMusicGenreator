<RelativeLayout style="@style/FragmentLayoutStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.themusicgenreator.SearchResultsActivity$PlaceholderFragment">

    <com.example.android.themusicgenreator.ExpandableTextView style="@style/DescriptionTextViewStyle"
        android:id="@+id/search_description"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_description">

        <LinearLayout
            android:id="@+id/results_scroller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
