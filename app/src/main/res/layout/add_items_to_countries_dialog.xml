<LinearLayout style="@style/FragmentLayoutStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_items_to_country_dialog"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView style="@style/WelcomeMessageStyle"
        android:id="@+id/add_items_to_countries_dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"/>

    <AutoCompleteTextView style="@style/WelcomeMessageStyle"
        android:id="@+id/add_item_to_country"
        android:hint="@string/add_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>